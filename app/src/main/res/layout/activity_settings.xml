<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_primary" />

    <uk.nhs.nhsx.covid19.android.app.widgets.SettingsOptionsView
        android:id="@+id/languageOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:settingName="@string/language" />

    <uk.nhs.nhsx.covid19.android.app.widgets.SettingsOptionsView
        android:id="@+id/manageMyDataOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:settingName="@string/about_manage_my_data"
        app:settingValue="@string/about_manage_my_data_settings_subtitle"/>

</LinearLayout>
